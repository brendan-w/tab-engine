extends ./base.jade

block append head
	link(rel='stylesheet', type='text/css', href='/static/css/account.css')

block nav
	a(href='/') Home
	a.active(href='/account') Account
	a(href='/upload') Upload
	a(href='/logout') Logout

block body

	br

	h1 #{username}

	br

	ul
		if !tabs || tabs.length === 0
			li No Tabs (click 'Upload' to create a new Tab)
		else
			each tab in tabs
				li
					a.pretty(href='#{tab.url}')
						span.name #{tab.name}
						span.artist #{tab.artist}
