extends ./base.jade

block append head
	link(rel='stylesheet', type='text/css', href='/static/css/search.css')

block nav
	a(href='/') Home
	if(logged_in)
		a(href='/account') Account
		a(href='/upload') Upload
		a(href='/logout') Logout
	else
		a(href='/login') Login
		a(href='/signup') Signup

block body

	#search
		h1 Search

		if(search.song)
			span.search Song:
				span.box #{search.song}
		if(search.artist)
			span.search Artist:
				span.box #{search.artist}
		if(search.key)
			span.search Key:
				span.box #{search.key}
		if(search.tuning)
			span.search Tuning:
				span.box #{search.tuning}
		if(search.scale)
			span.search Scale:
				span.box #{search.scale}

	ul
		li#labels
			span.name Name
			span.artist Artist
			span.tuning Tuning
			span.key Key
			span.scale Scale

		if !tabs || tabs.length === 0
			li
				span.notabs No Tabs Found
		else
			each tab in tabs
				li
					a.tab.pretty(href='/tab?tabid=#{tab.id}')
						span.name #{tab.name}
						span.artist #{tab.artist}
						span.tuning #{tab.tuning}
						span.key #{tab.key}
						span.scale #{tab.scale}
